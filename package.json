{
  "name": "kaigen",
  "version": "0.1.8",
  "description": "A plugin to generate images using AI.",
  "author": "Jacob Schweitzer",
  "license": "GPL-2.0-or-later",
  "main": "build/index.js",
  "scripts": {
    "build": "wp-scripts build src/index.js src/admin.js",
    "build:main": "wp-scripts build src/index.js",
    "build:admin": "wp-scripts build src/admin.js",
    "format": "wp-scripts format",
    "lint:css": "wp-scripts lint-style",
    "lint:js": "wp-scripts lint-js",
    "packages-update": "wp-scripts packages-update",
    "plugin-zip": "wp-scripts plugin-zip",
    "start": "wp-scripts start src/index.js src/admin.js",
    "wp-env": "wp-env",
    "playground:start": "npx @wp-playground/cli server --mount=.:/wordpress/wp-content/plugins/kaigen --blueprint=.github/blueprints/simple.json --port=9400",
    "playground:e2e": "npx @wp-playground/cli server --mount=.:/wordpress/wp-content/plugins/kaigen --blueprint=.github/blueprints/e2e-test.json --port=9400",
    "test:env:start": "wp-env start && sleep 10",
    "test:env:stop": "wp-env stop",
    "test:e2e": "playwright test",
    "test:e2e:ci": "playwright test --project=chromium --reporter=github",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:playground": "playwright test",
    "test:playwright": "wp-scripts test-playwright",
    "test:playwright:help": "wp-scripts test-playwright --help",
    "test:playwright:debug": "wp-scripts test-playwright --debug",
    "test:playwright:headed": "wp-scripts test-playwright --headed"
  },
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "@types/node": "^22.13.4",
    "@wordpress/e2e-test-utils-playwright": "^1.18.0",
    "@wordpress/env": "^8.12.0",
    "@wordpress/scripts": "^27.8.0",
    "dotenv": "^16.4.7"
  }
}
