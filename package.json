{
  "name": "kaigen",
  "version": "0.2.5",
  "description": "A plugin to generate images using AI.",
  "author": "Jacob Schweitzer",
  "license": "GPL-2.0-or-later",
  "main": "build/index.js",
  "scripts": {
    "build": "wp-scripts build src/index.js src/admin.js",
    "build:main": "wp-scripts build src/index.js",
    "build:admin": "wp-scripts build src/admin.js",
    "format": "wp-scripts format",
    "lint:css": "wp-scripts lint-style",
    "lint:js": "wp-scripts lint-js",
    "lint:php": "composer exec phpcs",
    "lint:php:fix": "composer exec phpcbf",
    "packages-update": "wp-scripts packages-update",
    "plugin-zip": "wp-scripts plugin-zip",
    "start": "wp-scripts start src/index.js src/admin.js",
    "playground:start": "npx @wp-playground/cli server --mount=.:/wordpress/wp-content/plugins/kaigen --blueprint=.github/blueprints/e2e-test.json --port=9400",
    "test:e2e": "playwright test",
    "test:e2e:ci": "playwright test --project=chromium --reporter=github",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^22.19.2",
    "@wordpress/e2e-test-utils-playwright": "^1.36.0",
    "@wordpress/scripts": "^27.9.0",
    "@wp-playground/cli": "^0.9.0",
    "dotenv": "^16.6.1"
  }
}
